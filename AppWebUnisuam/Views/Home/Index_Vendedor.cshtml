@model IEnumerable<AppWebUnisuam.Models.Produtos>

@{
    ViewData["Title"] = "Index";
    Layout = "";
}

<! DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AppWebUnisuam</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AppWebUnisuam.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/fontawesome-free-6.2.1-web/css/all.css" asp-append-version="true" />

</head>

<body>
<p>
    @*<a asp-action="Create" class="btn btn-primary">Adicionar</a>*@
</p>
    <div class="container">
        <h1 class="fw-bold">Produtos</h1>
        <div class="table-responsive">
            <input id="filtro" type="text" class="form-control mb-3" placeholder="Filtrar por nome">
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Nome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Descrição)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Preco)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Categoria)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Marca)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Disponibilidade)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Estoque)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AtualizadoEm)
                        </th>
                        <th>
                            Ação
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descrição)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Preco)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Categoria)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Marca)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Disponibilidade)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Estoque)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AtualizadoEm)
                            </td>
                            <td>
                                <a asp-action="Vender" asp-route-id="@item.Id" asp-controller="Vendas" class="btn btn-primary">Vender</a>
                                @*<a asp-action="Delete" asp-route-id="@item.Id" asp-controller="Produtos" class="btn btn-danger">Apagar</a>*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script>
        // Função para filtrar a tabela
        function filtrarTabela() {
            var filtro = document.getElementById('filtro').value.toUpperCase();
            var tabela = document.querySelector('.table');
            var linhas = tabela.getElementsByTagName('tr');

            // mostrar ou ocultar de acordo com o filtro
            for (var i = 0; i < linhas.length; i++) {
                var colunaNome = linhas[i].getElementsByTagName('td')[0];
                if (colunaNome) {
                    var valorNome = colunaNome.textContent || colunaNome.innerText;
                    if (valorNome.toUpperCase().indexOf(filtro) > -1) {
                        linhas[i].style.display = '';
                    } else {
                        linhas[i].style.display = 'none';
                    }
                }
            }
        }

        // Adicionar evento de digitação no input de filtro
        document.getElementById('filtro').addEventListener('keyup', filtrarTabela);
    </script>

</body>
</html>
