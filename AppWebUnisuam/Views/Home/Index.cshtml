@model IEnumerable<AppWebUnisuam.Models.Cadastro>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mt-2">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Produtos</h5>
                        <p class="card-text">Aqui você pode visualizar e gerenciar seus produtos em estoque.</p>
                        <a class="btn btn-primary" asp-area="" asp-controller="Produtos" asp-action="Index">Ver Produtos</a>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mt-2">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Vendas</h5>
                        <p class="card-text">Registre e acompanhe suas vendas realizadas.</p>
                        <a class="btn btn-primary" asp-area="" asp-controller="Vendas" asp-action="Index">Ver Vendas</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mt-2">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Usuários</h5>
                        <p class="card-text">Aqui você pode visualizar e gerenciar seus usuários cadastrados</p>
                        <a class="btn btn-primary" asp-area="" asp-controller="Cadastro" asp-action="Index">Ver Produtos</a>
                    </div>
                </div>
            </div>

@*            <div class="col-md-6 mt-2">
